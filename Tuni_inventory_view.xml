<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View (Danh sách) -->
    <record id="view_tuni_inventory_tree" model="ir.ui.view">
        <field name="name">tuni.inventory.tree</field>
        <field name="model">tuni.inventory</field>
        <field name="type">list</field> 
        <field name="arch" type="xml">
            <list>
                <field name="ma_so_kho"/>
                <field name="ten_mon_hang"/>
                <field name="ngay_mua"/>
                <field name="so_luong"/>
                <field name="tinh_trang" decoration-danger="tinh_trang == 'het_hang'"/>
            </list>
        </field>
    </record>

    <!-- Form View (Chi tiết) -->
    <record id="view_tuni_inventory_form" model="ir.ui.view">
        <field name="name">tuni.inventory.form</field>
        <field name="model">tuni.inventory</field>
        <field name="type">form</field> 
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="ma_so_kho"/>
                            <field name="ten_mon_hang"/>
                            <field name="ngay_mua"/>
                        </group>
                        <group>
                            <field name="so_luong"/>
                            <field name="tinh_trang" widget="selection" options="{'color_field': 'color'}" />
                        </group>
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action và Menu -->
    <record id="action_tuni_inventory" model="ir.actions.act_window">
        <field name="name">Quản lý kho hàng</field>
        <field name="res_model">tuni.inventory</field>
        <field name="view_mode">list,form</field>
    </record>

    
    <menuitem id="menu_tuni_inventory" name="Danh sách kho" parent="tuni_menu_root" action="action_tuni_inventory"/>


</odoo>