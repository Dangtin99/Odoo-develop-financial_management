<odoo>
    <record id="view_tuni_chat_support_tree" model="ir.ui.view">
        <field name="name">tuni.chat.support.tree</field>
        <field name="model">tuni.chat.support</field>
        <field name="type">list</field> 
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="customer_id"/>
            </list>
        </field>
    </record>

    <record id="view_tuni_chat_support_form" model="ir.ui.view">
        <field name="name">tuni.chat.support.form</field>
        <field name="model">tuni.chat.support</field>
        <field name="type">form</field> 
        <field name="arch" type="xml">
            <form string="Hỗ trợ khách hàng" class="o_form_view">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_id"/>
                        <field name="message"/>
                    </group>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_tuni_chat_support" model="ir.actions.act_window">
        <field name="name">Khung trò chuyện</field>
        <field name="res_model">tuni.chat.support</field>
        <field name="view_mode">list,form</field>
    </record>

     <menuitem id="menu_tuni_CRM_root" name="CRM" sequence="20"/>
    <menuitem id="menu_tuni_chat_support" name="Khung trò chuyện" parent="menu_tuni_CRM_root" action="action_tuni_chat_support"/>

</odoo>
