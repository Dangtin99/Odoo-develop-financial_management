<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="view_tuni_purchase_wizard_form" model="ir.ui.view">
        <field name="name">tuni.purchase.wizard.form</field>
        <field name="model">tuni.purchase.wizard</field>
        <field name="type">form</field> 
        <field name="arch" type="xml">
            <form string="Chọn Ngày Mua Hàng">
                <group>
                    <field name="ngay_chon"/>
                </group>
                <footer>
                    <button string="Xem Ngày Mua Hàng" type="object" name="action_xem_mua_hang" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_tuni_purchase_wizard" model="ir.actions.act_window">
        <field name="name">Chọn Ngày Ngày Mua Hàng</field>
        <field name="res_model">tuni.purchase.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_tuni_purchase_tree" model="ir.ui.view">
        <field name="name">tuni.purchase.tree</field>
        <field name="model">tuni.purchase</field>
        <field name="type">list</field> 
        <field name="arch" type="xml">
            <list string="Lịch sử mua hàng">
                <field name="ten_mon_hang"/>
                <field name="ngay_mua"/>
                <field name="gia"/>
                <field name="so_luong"/>
                <field name="chi_phi"/>
            </list>
        </field>
    </record>

    <record id="view_tuni_purchase_form" model="ir.ui.view">
        <field name="name">tuni.purchase.form</field>
        <field name="model">tuni.purchase</field>
        <field name="type">form</field> 
        <field name="arch" type="xml">
            <form string="Lịch sử mua hàng">
                <group>
                    <field name="ten_mon_hang"/>
                    <field name="gia"/>
                    <field name="ngay_mua"/>
                    <field name="so_luong"/>
                    <field name="chi_phi" readonly="1"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_tuni_purchase" model="ir.actions.act_window">
        <field name="name">Lịch sử mua hàng</field>
        <field name="res_model">tuni.purchase</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <menuitem id="tuni_menu_purchase_and_sale_root" name="Lịch sử giao dịch" parent="tuni_menu_root"/>
    <menuitem id="tuni_menu_purchase_list" name="Lịch sử mua hàng" parent="tuni_menu_purchase_and_sale_root" action="action_open_tuni_purchase_wizard"/>
</odoo>
