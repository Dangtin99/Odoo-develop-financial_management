<odoo>
    <record id="view_tuni_employee_form" model="ir.ui.view">
        <field name="name">tuni.employee.form</field>
        <field name="model">tuni.employee</field>
        <field name="type">form</field> 
        <field name="arch" type="xml">
            <form string="Nhân viên">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="gender"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="start_date"/>
                        <field name="position"/>
                        <field name="salary"/>
                        <field name="ca_id"/>
                        <field name="note"/>
                        <field name="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tuni_employee_tree" model="ir.ui.view">
        <field name="name">tuni.employee.tree</field>
        <field name="model">tuni.employee</field>
        <field name="type">list</field> 
        <field name="arch" type="xml">
            <list string="Danh sách nhân viên">
                <field name="name"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="position"/>
                <field name="salary"/>
                <field name="ca_id"/>
                <field name="image"/>
            </list>
        </field>
    </record>

    <record id="action_tuni_employee" model="ir.actions.act_window">
        <field name="name">Nhân viên</field>
        <field name="res_model">tuni.employee</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_tuni_hr_root" name="Quản lý Nhân sự" sequence="20"/>
    <menuitem id="menu_tuni_hr_employee" name="Danh Sách Nhân Viên" parent="menu_tuni_hr_root" action="action_tuni_employee"/>
</odoo>
