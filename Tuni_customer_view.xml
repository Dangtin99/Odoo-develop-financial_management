<odoo>
    <record id="view_tuni_customer_tree" model="ir.ui.view">
        <field name="name">tuni.customer.tree</field>
        <field name="model">tuni.customer</field>
        <field name="type">list</field> 
        <field name="arch" type="xml">
            <list>
                <field name="card_number"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="birthday"/>
            </list>
        </field>
    </record>

    <record id="view_tuni_customer_form" model="ir.ui.view">
        <field name="name">tuni.customer.form</field>
        <field name="model">tuni.customer</field>
        <field name="type">form</field> 
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="card_number" readonly="1"/>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="birthday"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_tuni_customer" model="ir.actions.act_window">
        <field name="name">Danh Sách Khách Hàng</field>
        <field name="res_model">tuni.customer</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <menuitem id="menu_tuni_CRM_root" name="CRM" sequence="20"/>
    <menuitem id="menu_tuni_customer" name="Danh Sách Khách Hàng" parent="menu_tuni_CRM_root" action="action_tuni_customer"/>
</odoo>
