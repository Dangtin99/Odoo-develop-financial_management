<odoo>
    <record id="view_tuni_promotion_gift_dummy_tree" model="ir.ui.view">
        <field name="name">tuni.promotion.gift.tree</field>
        <field name="model">tuni.promotion.gift</field>
        <field name="type">list</field> 
        <field name="arch" type="xml">
            <list>
                <field name="id"/>
            </list>
        </field>
    </record>

    <record id="view_tuni_promotion_gift_dummy_form" model="ir.ui.view">
        <field name="name">tuni.promotion.gift.form</field>
        <field name="model">tuni.promotion.gift</field>
        <field name="type">form</field> 
        <field name="arch" type="xml">
            <form __validate__="1">
                <group>
                    <span class="o_form_label">Tự động xử lý trong cron: gửi phiếu sinh nhật</span>
                </group>
            </form>
        </field>
    </record>
    <record id="action_tuni_promotion_gift" model="ir.actions.act_window">
        <field name="name">Mã Khuyến Mãi Sinh Nhật</field>
        <field name="res_model">tuni.promotion.gift</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_tuni_CRM_root" name="CRM" sequence="20"/>
    <menuitem id="menu_tuni_promotion_gift" name="Mã Khuyến Mãi Sinh Nhật" parent="menu_tuni_CRM_root" action="action_tuni_promotion_gift"/>

</odoo>
